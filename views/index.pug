extends layout

block content
  nav
    h1= title
    a(href='/')= 'Home'
    a(href='/about')= 'About'
    a(href='/contact')= 'Contact'
  section(id='sm_about')
    p Placeholder for image
    br
    p Small about the blogger section 

  section(id='blogs')
    p Blog list Section
    each val in data
      section(class='card')
        h2= val.blog_title
        p= val.blog_text 
        form(method='POST' action='/edit')
          input(type='txt' name='text')
          input(type='hidden' name='id' value=val.blog_id)
          button(type='submit')= 'Edit Blog'
    br
  
  form(method='POST' action='/add')
    label(for='title')= 'New blog title:' 
    br
    input(type='txt' name='title' alt='Enter title')
    br
    label(for='body')= 'New blog text:'
    br
    input(type='txt' name='body' alt='Enter body')
    br
    button(type='submit' text='Add to')='Submit new blog!'

  